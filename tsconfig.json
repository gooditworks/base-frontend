{
  "include": [
    "src/**/*",
    "next-env.d.ts",
    "playwright.config.ts",
    "./tests/**/*.ts",
    "./sentry.*.config.ts",
    ".next/types/**/*.ts",
    "next.config.js",
    "tailwind.config.js"
  ],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "baseUrl": "src",
    "paths": {
      "public/*": ["../public/*"]
    },
    "moduleResolution": "node",
    "module": "commonjs",
    "jsx": "preserve",
    "target": "es5",
    "lib": ["esnext", "dom"],
    "types": ["jest", "node"],
    "outDir": "build",
    "strict": true,
    "allowJs": false,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  }
}
