{
  "name": "gooditworks_base_frontend",
  "version": "0.2.3",
  "description": "Gooditworks base frontend project",
  "repository": "https://github.com/gooditworks/base-frontend",
  "license": "MIT",
  "author": "Max Eliseev <mxseev@gmail.com>",
  "scripts": {
    "build": "next build",
    "commit": "git add . && cz",
    "dev": "next dev",
    "postinstall": "sh ./scripts/add_base_remote.sh",
    "lint": "concurrently -c green \"npm:lint:*\"",
    "lint:base": "sh ./scripts/check_base_update.sh",
    "lint:next": "next lint",
    "lint:typecheck": "tsc --noEmit --project tsconfig.json",
    "playwright:inspect": "PWDEBUG=1 playwright test",
    "playwright:install": "playwright install",
    "playwright:test": "playwright test",
    "playwright:update-snapshots": "playwright test --update-snapshots",
    "release": "standard-version",
    "start": "next build && next start",
    "style:packagesort": "sort-package-json",
    "test": "concurrently -c green \"npm:test:*\"",
    "test:e2e": "npm run playwright:test",
    "test:unit": "jest"
  },
  "dependencies": {
    "@gooditworks/monitoring": "1.5.4",
    "classnames": "2.3.1",
    "next": "12.2.4",
    "next-axiom": "0.11.1",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@arkweid/lefthook": "0.7.7",
    "@commitlint/cli": "17.0.3",
    "@commitlint/config-conventional": "17.0.3",
    "@playwright/test": "1.24.2",
    "@testing-library/react": "13.3.0",
    "@types/jest": "28.1.6",
    "@types/node": "17.0.5",
    "@types/react": "18.0.17",
    "@typescript-eslint/eslint-plugin": "5.33.0",
    "@typescript-eslint/parser": "5.33.0",
    "autoprefixer": "10.4.8",
    "commitizen": "4.2.5",
    "commitlint-plugin-function-rules": "1.7.1",
    "concurrently": "7.3.0",
    "cssnano": "5.1.12",
    "cz-conventional-changelog": "3.3.0",
    "enhanced-resolve": "5.10.0",
    "eslint": "8.21.0",
    "eslint-config-airbnb": "19.0.4",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-config-airbnb-typescript": "17.0.0",
    "eslint-config-next": "12.2.4",
    "eslint-plugin-jest": "26.8.2",
    "jest": "28.1.3",
    "jest-environment-jsdom": "28.1.3",
    "jest-junit": "14.0.0",
    "postcss": "8.4.16",
    "postcss-flexbugs-fixes": "5.0.2",
    "prettier": "2.7.1",
    "sort-package-json": "1.57.0",
    "standard-version": "9.5.0",
    "tailwindcss": "3.1.8",
    "ts-jest": "28.0.7",
    "ts-node": "10.9.1",
    "typescript": "4.7.4"
  }
}
